@using FoodieHub.MVC.Models.User
@model UserDTO
@{
    ViewData["Title"] = "User Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4">User Details</h2>
    <dl class="row">
        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.Fullname</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Avatar</dt>
        <dd class="col-sm-9">
            <img src="@Url.Content($"~/images/{Model.Avatar}")" alt="User Avatar" class="img-thumbnail" style="width: 100px;">
        </dd>

        <dt class="col-sm-3">Is Active</dt>
        <dd class="col-sm-9">@((Model.IsActive) ? "Yes" : "No")</dd>

        <dt class="col-sm-3">Joined At</dt>
        <dd class="col-sm-9">@Model.JoinedAt.ToString("MMMM dd, yyyy")</dd>

        <dt class="col-sm-3">Role</dt>
        <dd class="col-sm-9">@Model.Role</dd>
    </dl>



    <div class="mt-4">
        <!-- Set Role Button -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#setRoleModal">
            Set Role Admin
        </button>

        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<!-- Modal Structure -->
<div class="modal fade" id="setRoleModal" tabindex="-1" aria-labelledby="setRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="setRoleModalLabel">Confirm Role Assignment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="SetRole">
                <div class="modal-body">
                    <input type="hidden" name="UserID" value="@Model.Id" />

                    <div>
                        <b>New Role: </b>                                             
                        <span class="text-danger">Admin</span>
                        <input type="hidden" name="Role" value="Admin" />
                    </div>

                    <p>Are you sure you want to set this role?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>
