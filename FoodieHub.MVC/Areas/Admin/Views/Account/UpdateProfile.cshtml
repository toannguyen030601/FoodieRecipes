@using FoodieHub.MVC.Models.User
@inject IConfiguration config
@model UpdateProfileDTO
@{
    ViewData["Title"] = "Update Profile";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var url = config["BaseHost"];
}

<link rel="stylesheet" href="~/css/profile.css">
<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h5>Account / Profile</h5>
            <h3 class="mt-3">My Account</h3>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row Profile-content mt-4">
        <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data" class="w-100">
            <div class="row">
                <!-- Fullname -->
                <div class="col-md-6 mb-3">
                    <label for="fullname" class="form-label">Fullname</label>
                    <input asp-for="Fullname" class="form-control" />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="col-md-6 mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>

                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label for="bio" class="form-label">Bio</label>
                        <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <!-- Change Avatar -->
                    <div class="col-6 col-md-6 mb-3">
                        <label for="avatar" class="form-label">Change Avatar</label>
                        <input asp-for="File" type="file" class="form-control" accept="image/*" />
                        @if (!string.IsNullOrEmpty(Model.Avatar))
                        {
                            <img src="@(url + "/images/" + Model.Avatar)" class="mt-2 rounded-circle" style="width: 100px; height: 100px;" alt="Avatar" />
                        }
                    </div>
                </div>
                <!-- Bio -->
             

                <!-- Password Change Section -->
                <div class="col-md-12 mt-4">
                    <h4>Change Password</h4>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="oldPassword" class="form-label">Current Password</label>
                    <input asp-for="OldPassword" type="password" class="form-control" placeholder="Enter current password" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <!-- Update Button -->
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary px-5">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>
